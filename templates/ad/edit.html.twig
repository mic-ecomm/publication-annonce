{% extends 'base.html.twig' %}

{% block title %}
	Edition d'une annonce
{% endblock %}

{% form_theme form _self 'ad/_collection.html.twig' %}

{% block body %}

	<div class="container">
		<h2>Modifier l'annonce:
			{{ ad.title }}</h2>

		{{ form_start(form) }}

		{{ form_widget(form) }}

		<button type="submit" class="btn btn-primary">Enregistrer les modifications</button>

		{{ form_end(form) }}
	</div>
{% endblock %}

{% block javascripts %}

	<script src="/js/ad.js">
	</script>

{% endblock %}
